<h1>Todo Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.description %></td>
      </tr>
    <% end %>
    <div class="form">
      <%= form_for :todo do |f| %>
        Title: <%= f.text_field :title %><br />
        Description : <%= f.text_field :description %>
        <%= f.submit %>
      <% end %>
    </div>
  </tbody>
</table>

<br>


